{
  "name": "punky",
  "version": "0.2.0",
  "description": "Bootstrap your APIs taking advantage of the best community modules",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/dgaubert/punky.git"
  },
  "engines": {
    "node": "6.0.0"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "standard index.js \"lib/**/*.js\" \"test/**/*.js\"",
    "pretest": "npm run lint",
    "test": "mocha --recursive -r test/setup test/",
    "test:watch": "npm run test -- -w",
    "coverage": "istanbul cover _mocha test/ -- --recursive -r test/setup",
    "start": "node ."
  },
  "keywords": [
    "es6",
    "express",
    "bootstrap"
  ],
  "author": "Daniel Garc√≠a Aubert <@dgaubert>",
  "license": "BSD-3-Clause",
  "dependencies": {
    "bole": "3.0.1",
    "bole-console": "0.1.10",
    "express": "4.14.0",
    "meow": "3.7.0",
    "node-statsd": "0.1.1",
    "node-uuid": "1.4.7",
    "read-pkg-up": "1.0.1",
    "response-time": "2.3.1"
  },
  "devDependencies": {
    "istanbul": "0.4.4",
    "standard": "7.1.2",
    "mocha": "3.0.2",
    "sinon": "1.17.5"
  },
  "standard": {
    "globals": [
      "__source",
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  }
}
